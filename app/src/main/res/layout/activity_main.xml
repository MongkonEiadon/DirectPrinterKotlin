        <Button android:id="@+id/btn_connect" android:layout_width="120dip" android:layout_height="wrap_content" android:text="connect_to_ip_btn"/>
        <EditText android:id="@+id/ip_address" android:layout_width="200dip" android:layout_height="wrap_content" android:text="192.168.31.87"/>
    </LinearLayout>
    <EditText android:id="@+id/edt_print_content" android:layout_width="fill_parent" android:layout_height="180dip" android:gravity="top|left" android:hint="print_content_hint_edt"/>
    <TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TableRow>

        </TableRow>
        <TableRow>

        </TableRow>
    </TableLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/btn_print" android:layout_width="100dip" android:layout_height="wrap_content" android:text="print_btn"/>
        <Button android:id="@+id/btn_test" android:layout_width="100dip" android:layout_height="wrap_content" android:layout_marginLeft="8dip" android:text="test_btn"/>
        <Button android:id="@+id/btn_option" android:layout_width="100dip" android:layout_height="wrap_content" android:layout_marginLeft="8dip" android:text="option_btn"/>
    </LinearLayout>
</LinearLayout>